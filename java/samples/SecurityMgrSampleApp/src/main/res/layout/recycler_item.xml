<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recyclerItem_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingStart="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Application name"
            android:id="@+id/recyclerItem_ApplicationName"
            android:textIsSelectable="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            tools:text="Device Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerItem_DeviceName"
            android:textIsSelectable="false"
            android:layout_below="@+id/recyclerItem_ApplicationName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            tools:text="Claim State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerItem_ClaimState"
            android:textIsSelectable="false"
            android:layout_below="@+id/recyclerItem_DeviceName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            tools:text="Running State"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerItem_RunningState"
            android:textIsSelectable="false"
            android:layout_below="@+id/recyclerItem_ClaimState"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        
    </RelativeLayout>

</android.support.v7.widget.CardView>
