<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_config_layout"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    >
    
    <EditText
        android:id="@+id/language_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_language"
        />    
    <TextView 
        android:id="@+id/supportedLanguages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/language_edit_text"
        android:text="@string/supported_languages"
        android:textSize="17sp"
        />
    <TextView 
        android:id="@+id/supported_languages_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/supportedLanguages"
        android:layout_alignBaseline="@id/supportedLanguages"
        android:textSize="17sp"
        />
    
    
</RelativeLayout>
